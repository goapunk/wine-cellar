{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "digest": {
    "enabled": false
  },
  "pip_requirements": {
    "fileMatch": [
      "^requirements/.*\\.txt$"
    ]
  }
}
